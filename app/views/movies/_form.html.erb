<%= form_with(model: @movie, class: "space-y-6") do |f| %>
  <%# Exibe erros de validação, se houver algum %>
  <% if @movie.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg relative">
      <strong class="font-bold"><%= pluralize(@movie.errors.count, "erro") %> impediu este filme de ser salvo:</strong>
      <ul class="mt-3 list-disc list-inside">
        <% @movie.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, 'Título', class: 'block text-sm font-medium text-gray-700' %>
    <%= f.text_field :title, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
  </div>

  <div>
    <%= f.label :rating, 'Classificação', class: 'block text-sm font-medium text-gray-700' %>
    <%= f.select :rating, ['G', 'PG', 'PG-13', 'R', 'NC-17'], { include_blank: 'Selecione uma classificação' }, { class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' } %>
  </div>

  <div>
    <%= f.label :release_date, 'Data de Lançamento', class: 'block text-sm font-medium text-gray-700' %>
    <%= f.date_field :release_date, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
  </div>

  <div>
    <%= f.label :description, 'Descrição', class: 'block text-sm font-medium text-gray-700' %>
    <%= f.text_area :description, rows: 5, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
  </div>

  <div class="flex items-center justify-end space-x-4">
    <%= link_to 'Cancelar', movies_path, class: 'text-gray-600 hover:text-gray-900 font-medium' %>
    <%= f.submit 'Salvar Filme', class: 'cursor-pointer bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg' %>
  </div>
<% end %>

